<h1  style="color:darkcyan;" id="demo" onmouseover="mouseOver()" onmouseout="mouseOut()">Grilled Sandwich Recipe<hr></h1>

<body>
    <script>
    function mouseOver() {
      document.getElementById("demo").style.color = "red";
    }
    
    function mouseOut() {
      document.getElementById("demo").style.color = "black";
    }
    window.addEventListener( "load", start, false );
	
	function start()
	{
	document.getElementById("picture").addEventListener("mouseover", over, false );
	document.getElementById("picture").addEventListener("mouseout", out, false );
	}

	function over()
	{
	 document.getElementById("picture").setAttribute( "src", "SAND.jfif");
	}

	function out()
	{
	document.getElementById("picture").setAttribute( "src", "sandwich-02.jpg");
	}
    </script>
    
